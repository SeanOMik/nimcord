    "version": "2.0.0",
    "tasks": [
        {
            "taskName": "Run client.nim",
            "command": "nim",
            "args": ["c", "-d:ssl", "-r", "src/client.nim"],
            "options": {
                "cwd": "${workspaceRoot}"
            },
            "type": "shell",
            "group": {
                "kind": "build",
                "isDefault": true
            }
        }
    ]
}